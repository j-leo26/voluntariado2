@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/Scripts/css/Complaints.css" rel="stylesheet" />
    <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Log In", "Login", "Users", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Complaints", "Complaints", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Create Account", "Index", "Users", new { area = "" }, new { @class = "nav-link" })</li>

        </ul>
    </div> 
</head>
<br />  
<div class="container">
    <div class="row">
        <h1>contact us</h1>
    </div>
    <div class="row">
        <h4 style="text-align:center">We'd love to hear from you!</h4>
    </div>
    <div class="row input-container">
        <div class="col-xs-12">
            <div class="styled-input wide">
                <input id="NombreQuejas" type="text" required />
                <label>Name</label>
            </div>
        </div>
        <div class="col-md-6 col-sm-12">
            <div class="styled-input">
                <input id="Correo2" type="text" required />
                <label>Email</label>
            </div>
        </div>
        <div class="col-md-6 col-sm-12">
            <div class="styled-input" style="float:right;">
                <input id="Phone" type="text" required />
                <label>Phone Number</label>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="styled-input wide">
                <textarea id="Asunto" required></textarea>
                <label>Message</label>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="btn-lrg submit-btn" onclick="sendEmail()">Send Message</div>

        </div>
        <button onclick="sendEmail()"><a>send message</a></button>
    </div>
</div>

<script>
    function sendEmail() {
        var nombre = document.getElementById("NombreQuejas").value;
        var correo = document.getElementById("Correo2").value;
        var tienecuenta = document.querySelector('Phone').value;
        var asunto = document.getElementById("Asunto").value;

        var link = "mailto:joselchavarro26@gmail.com"
            + "?subject=" + encodeURIComponent(asunto)
            + "&body=" + encodeURIComponent("Nombre: " + nombre + "\r\n"

                + "Correo: " + correo + "\r\n"

                + "Asunto: " + asunto);

        window.location.href = link;
    }</script>

<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="~/Scripts/js/SendComplaints.js"></script>

</html>
